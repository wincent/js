{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/preset-flow": "*",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "flow-bin": "*",
    "jest": "24.0.0-alpha.12",
    "prettier": "*"
  },
  "scripts": {
    "build": "make -j 4 all",
    "checkFormat": "prettier --list-different '*.{js,json,md}' 'packages/*/src/**/*.{js,json}' packages/*/*.{js,json,md}",
    "fix": "eslint --fix packages/*/src/**/*.js",
    "format": "prettier --write '*.{js,json,md}' 'packages/*/src/**/*.{js,json}' packages/*/*.{js,json,md}",
    "lint": "eslint packages/*/src/**/*.js",
    "prepublishOnly": "yarn checkFormat && yarn lint && yarn typecheck && yarn test",
    "test": "jest",
    "typecheck": "flow"
  },
  "jest": {
    "moduleNameMapper": {
      "@wincent/(.+)$": "<rootDir>packages/$1/src"
    },
    "testMatch": [
      "**/*-test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/packages/[^/]+/lib/"
    ],
    "transform": {
      "^.+\\.js$": "./support/babel-jest-wrapper.js"
    }
  }
}
