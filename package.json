{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@babel/traverse": "*",
    "@types/jest": "23.3.13",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "babel-core": "7.0.0-bridge.0",
    "eslint": "*",
    "eslint-plugin-notice": "*",
    "flow-bin": "*",
    "jest": "24.0.0-alpha.12",
    "prettier": "*",
    "typescript": "3.2.4"
  },
  "scripts": {
    "build": "make -j 4 all",
    "checkFormat": "prettier --list-different '.*.{js,json}' '*.{js,json,md}' 'packages/*/src/**/*.{js,js.flow,json,ts}' 'packages/*/*.{js,json,md}' 'scripts/**/*.js'",
    "fix": "eslint --fix 'packages/*/src/**/*.{js,ts}' 'scripts/**/*.js'",
    "format": "prettier --write '.*.{js,json}' '*.{js,json,md}' 'packages/*/src/**/*.{js,js.flow,json,ts}' 'packages/*/*.{js,json,md}' 'scripts/**/*.js'",
    "lint": "eslint 'packages/*/src/**/*.{js,ts}' 'scripts/**/*.js'",
    "prepublishOnly": "yarn checkFormat && yarn lint && yarn typecheck && yarn test && scripts/check-dependencies.js && yarn build && git diff --quiet",
    "test": "env BABEL_ENV=jest jest",
    "typecheck": "tsc && flow"
  }
}
