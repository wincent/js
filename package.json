{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "prettier": "*"
  },
  "scripts": {
    "build": "make all",
    "checkFormat": "prettier --list-different packages/*/src/**/*.js packages/*/*.js",
    "format": "prettier --write packages/*/src/**/*.js packages/*/*.js",
    "prepublishOnly": "yarn checkFormat"
  }
}
