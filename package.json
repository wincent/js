{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@babel/traverse": "*",
    "@types/babel__core": "*",
    "@types/babel__traverse": "*",
    "@types/jest": "*",
    "@types/jest-diff": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@wincent/babel-plugin-invariant-transform": "*",
    "babel-jest": "*",
    "babel-plugin-minify-replace": "*",
    "babel-preset-minify": "*",
    "eslint": "*",
    "eslint-plugin-node": "*",
    "eslint-plugin-notice": "*",
    "flow-bin": "*",
    "jest": "*",
    "prettier": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "workspace-scripts build || make -j 4 all",
    "clean": "make clean",
    "format": "workspace-scripts format",
