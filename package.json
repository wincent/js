{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/preset-flow": "*",
    "babel-eslint": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "flow-bin": "*",
    "prettier": "*"
  },
  "scripts": {
    "build": "make all",
    "checkFormat": "prettier --list-different packages/*/src/**/*.js packages/*/*.js",
    "fix": "eslint --fix packages/*/src/**/*.js",
    "format": "prettier --write packages/*/src/**/*.js packages/*/*.js",
    "lint": "eslint packages/*/src/**/*.js",
    "prepublishOnly": "yarn checkFormat && yarn typecheck",
    "typecheck": "flow"
  }
}
