{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@babel/traverse": "*",
    "@types/jest": "*",
    "@types/jest-diff": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-plugin-node": "*",
    "eslint-plugin-notice": "*",
    "flow-bin": "*",
    "jest": "*",
    "prettier": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "make -j 4 all",
    "checkFormat": "prettier --list-different '.*.{js,json}' '*.{js,json,md}' 'packages/*/{bin,src}/**/*.{js,js.flow,json,ts}' 'packages/*/*.{js,json,md}' 'scripts/**/*.js'",
    "fix": "eslint --fix 'packages/*/{bin,src}/**/*.{js,ts}' 'scripts/**/*.js'",
    "format": "prettier --write '.*.{js,json}' '*.{js,json,md}' 'packages/*/{bin,src}/**/*.{js,js.flow,json,ts}' 'packages/*/*.{js,json,md}' 'scripts/**/*.js'",
    "lint": "eslint 'packages/*/{bin,src}/**/*.{js,ts}' 'scripts/**/*.js'",
    "prepublishOnly": "yarn checkFormat && yarn lint && yarn typecheck && yarn test && yarn build && scripts/check-dependencies.js && scripts/check-changelogs.js && git diff --quiet",
    "publish": "scripts/publish.js",
    "test": "env BABEL_ENV=jest jest",
    "typecheck": "tsc && flow"
  }
}
