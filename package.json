{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/parser": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/preset-flow": "*",
    "@babel/traverse": "*",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "eslint-plugin-notice": "*",
    "flow-bin": "*",
    "jest": "24.0.0-alpha.12",
    "prettier": "*"
  },
  "scripts": {
    "build": "make -j 4 all",
    "checkFormat": "prettier --list-different '.*.{js,json}' '*.{js,json,md}' 'packages/*/src/**/*.{js,json,mjs}' 'packages/*/*.{js,json,md}' 'scripts/*.js'",
    "fix": "eslint --fix 'packages/*/src/**/*.{js,mjs}' 'scripts/*.js'",
    "format": "prettier --write '.*.{js,json}' '*.{js,json,md}' 'packages/*/src/**/*.{js,json,mjs}' 'packages/*/*.{js,json,md}' 'scripts/*.js'",
    "lint": "eslint 'packages/*/src/**/*.{js,mjs}' 'scripts/*.js'",
    "prepublishOnly": "yarn checkFormat && yarn lint && yarn typecheck && yarn test && scripts/check-dependencies.js",
    "test": "env BABEL_ENV=jest jest",
    "typecheck": "flow"
  }
}
